{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["^Dockerfile$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)\\s+(ARG|ENV)\\s+[^=]+=(?<currentValue>\\S+)"
      ]
    }
  ]
}
